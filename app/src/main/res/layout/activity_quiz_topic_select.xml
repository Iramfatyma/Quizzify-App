<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gra5"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Enter Subject and Topic :"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/SubjectEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Subject"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/TopicEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Topic"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/CheckAvailableQuiz1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Check Available Quizzes"
        app:backgroundTint="#03A9F4" />

    <Button
        android:id="@+id/CreateQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Create new quiz"
        app:backgroundTint="#03A9F4" />
</LinearLayout>