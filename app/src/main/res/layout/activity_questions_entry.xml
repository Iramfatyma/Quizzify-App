<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/gra5"
    tools:context=".QuestionsEntry">

    <TextView
        android:id="@+id/QuestionNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the question here"
        android:inputType="textPersonName"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:padding="20dp" />

    <EditText
        android:id="@+id/crt_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Correct Option"
        android:inputType="textPersonName"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:padding="20dp" />

    <EditText
        android:id="@+id/incrt_option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Option 2"
        android:inputType="textPersonName"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:padding="20dp" />

    <EditText
        android:id="@+id/incrt_option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Option 3"
        android:inputType="textPersonName"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:padding="20dp" />

    <EditText
        android:id="@+id/incrt_option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Option 4"
        android:inputType="textPersonName"
        android:textColor="#F6F0F0"
        android:textColorHint="#F5F0F0"
        android:padding="20dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Submit"
        app:backgroundTint="#03A9F4" />

    <Button
        android:id="@+id/enterNextQues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="next"
        app:backgroundTint="#03A9F4" />

    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="finish"
        app:backgroundTint="#03A9F4" />

</LinearLayout>